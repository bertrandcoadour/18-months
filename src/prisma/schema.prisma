model Country {
  id                               String @id @default(auto()) @map("_id") @db.ObjectId
  code                             String
  name                             String
  capital                          String?
  population                       Int?
  continentCode                    String?
  shape                            Json?
  cities                           City[]
}

type City {
  name                             String
  latitude                         Float?
  longitude                        Float?
  countryCode                      String?
}